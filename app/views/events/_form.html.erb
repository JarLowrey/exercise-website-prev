<%= simple_form_for @event, validate: true do |f| %>
  <%= f.object.errors.full_messages.join(", ") if f.object.errors.any? %>

  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :start %>

  <%= f.simple_fields_for :address, validate: true do |address| %>
    <%= render partial: 'shared/address/form', locals: {f: address} %>
  <% end %>

  <%= f.simple_fields_for :social_profile, validate: true do |social_profile| %>
    <%= render partial: 'shared/social_profile/form', locals: {f: social_profile} %>
  <% end %>

  <div>
    <%= f.simple_fields_for :workouts, validate: true do |workout| %>
      <%= render partial: 'shared/workout/form', locals: {f: workout} %>
      <%= link_to_add_association 'add workout', f, :workouts, partial: 'shared/workout/form' %>
    <% end %>
  </div>
  
  <%= f.button :submit %>
<% end %>
