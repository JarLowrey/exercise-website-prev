<%= simple_form_for @event do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>

  <%= f.simple_fields_for :address, html: { onsubmit: "submit_map_details()" }  do |address| %>
    <%= render :partial => 'shared/address/form', :locals => {:f => address} %>
  <% end %>
  
  <%= f.button :submit %>
<% end %>
